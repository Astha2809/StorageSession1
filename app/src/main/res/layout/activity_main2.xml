<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Main2Activity">


    <EditText
        android:id="@+id/text3"
        android:layout_width="@dimen/edit_text_main2_width"
        android:layout_height="@dimen/edit_text_main2_height"
        android:layout_marginStart="@dimen/edit_text_main_marginstart"
        android:layout_marginLeft="@dimen/button_main_marginstart"
        android:layout_marginTop="@dimen/edit_text_main2_margintop"
        android:hint="@string/edit_text_text"
        android:textColorHint="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text4" />

    <TextView
        android:id="@+id/text4"
        android:layout_width="@dimen/edit_text_main_width"
        android:layout_height="@dimen/edit_text_main2_height"
        android:layout_marginStart="@dimen/text_view_main_marinstart"
        android:layout_marginLeft="@dimen/text_view_main_marinstart"
        android:layout_marginTop="@dimen/text_view_main_margintop"
        android:background="@color/lightpink"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/button_main2_marginstart"
        android:layout_marginLeft="@dimen/button_main2_marginstart"
        android:layout_marginTop="@dimen/button_main2_margintop"
        android:text="@string/read"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text2" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/button5_main_marginstart"
        android:layout_marginLeft="@dimen/button5_main_marginstart"
        android:layout_marginTop="@dimen/text_view_main_margintop"
        android:text="@string/write"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button1" />


</androidx.constraintlayout.widget.ConstraintLayout>